body
  font-family Helvetica
nav
  z-index 1
  position fixed
  height 50px
  width 100%
.fullPage
  height 100vh
  overflow auto
.content
  position relative
  height calc(100% - 50px)
  top 50px
.pe
  pointer-events none

@import 'modules/functions'
@import 'modules/animations'
@font-face
  font-family Lato
  src url(../webfonts/Lato-Hairline.ttf)
// vars
selected_color = rgba(0, 0, 0, 0.5)
selecting_color = alpha(light, 0.5)
primary_color = #1b75bc
secondary_color = #2d95bc
dark = #0A0A0A
light = #f5f5f5
dark_alpha = rgba(0,0,0,0.5)

primary_font = Helvetica, sans-serif
tertiary_font = Lato
light_font = Lato


html
  background white
  ::-webkit-scrollbar
    width 0
  padding 0
  ::-webkit-inner-spin-button
    -webkit-appearance: none
*
  font-family primary_font
  list-style-type none
  text-decoration none
  margin 0
  padding 0
  box-sizing border-box
h1
  font(primary_font, light, 40px, bold, 0, inherit)
h2
  font(primary_font, light, 20px, normal, 0, inherit)
h3
  font(primary_font, light, 15px, lighter, 0, inherit)
a
  color inherit
.caps {
  text-transform:capitalize;
}
input
  &:focus
    outline none
.page
  size(100vw, 100vh, 0, 0)
  position relative
  size(100vw, 100vh, 0, 0)
  overflow hidden
.content
  top: 80px
  padding 50px
  height calc(100vh - 80px)
.btn
  background-color primary_color
  color white
  padding 12px
  margin 10px 0
  border none
  width 100%
  border-radius 3px
  cursor pointer
  font-size 25px
  &:hover
    background-color white
    color deepskyblue
//Index
#load
  position fixed
  background primary_color
  z-index 2
  text-align center
  .centered_block
    position relative
    top calc(50% - 10vw)
    width 100%
    height 20vw
    h1
      text-align center
      line-height 0
    p
      font(tertiary_font, light, 20vw, 100, normal, center)
#index_1
  height 100vh
  background gradient(secondary_color, primary_color)
  .contents
    margin-top 80px
  .grid
    height 100%
    display grid
    grid-template-columns auto auto auto
  .grid > div
    position relative
    border 1px solid white
  .textbox
    text-align center
  .item_grid
    position absolute
    top 0
  placehold(alpha(light, 0.2))
  #TypeName
    color white
    font-weight bold
    text-align center
    size(300px, 50px, 30px, 0)
    pos(absolute, calc(50% - 35px), calc(50% - 160px), calc(50% - 35px), calc(50% - 160px), 300px, 50px)
    border 2px white solid
    font-size 30px
    background rgba(0,0,0,0.5)
//header
nav
  //opacity 0
  z-index 1
  top 0
  background alpha(dark, 0.8)
  size(100%, 80px, i, i)
  position fixed
  font(primary_font, light, 15px, light2, 0.1em, i)
  .menu
    #HOME
      float left
      font(primary_font, light, 30px, bold, normal, i)
    a
      line-height 80px
      padding 0 20px 0 20px
      float right
      &:not(first-child)
        breakpoint(750px, none)
      &:hover
        background alpha(dark, 0.5)
  #hamburger
    size(85px, 80px, 20px 25px, 0)
    float right
    display none
    breakpoint(750px, block)
    transition all .2s ease-in-out
    &:hover
      transform: scale(1.1)
    div
      position relative
      transition all .2s ease-in-out
      size(35px, 5px, 0, 6px 0, i)
      background white
    &hover
      background alpha(dark, 0.5)
  .dropdown
    display none
    background alpha(dark, 0.8)
    size(100%, 230px, 0, 0)
    position absolute
    top 80px
    .dropdown-content
      position relative
      top -70px
    font(primary_font, h1_light, 20px, bold, normal, center)
    a
      size(100vw, 60px, 0, 0)
      line-height 60px
      float left
      &hover
        background alpha(dark, 0.5)
      &:first-child
        font-size 30px

